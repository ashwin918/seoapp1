<% const title='Link Agent - ' + provider; %>
    <%- include('../partials/head') %>

        <div class="auth-page"
            style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 40px 20px;">
            <div class="auth-box"
                style="width: 100%; max-width: 480px; background: var(--bg-card); border: 1px solid var(--border); border-radius: var(--radius-lg); backdrop-filter: blur(20px); padding: 48px; box-shadow: var(--shadow-lg);">
                <div class="auth-header" style="text-align: center; margin-bottom: 40px;">
                    <div class="auth-logo"
                        style="width: 72px; height: 72px; background: <%= color %>22; border: 1px solid <%= color %>44; border-radius: 20px; display: inline-flex; align-items: center; justify-content: center; color: <%= color %>; font-size: 2.25rem; margin-bottom: 24px;">
                        <i class="fab <%= icon %>"></i>
                    </div>
                    <h1 class="auth-title"
                        style="font-size: 2.25rem; font-weight: 800; margin-bottom: 8px; letter-spacing: -0.02em;">
                        Authorize Agent</h1>
                    <p class="text-muted" style="font-size: 1rem;">Setup <%= provider %> sync for autonomous
                            deployments.</p>
                </div>

                <%- include('../partials/flash') %>

                    <form action="/oauth/<%= providerSlug %>/callback" method="POST" class="auth-form">
                        <input type="hidden" name="state" value="<%= state %>">

                        <% if (providerSlug==='github' ) { %>
                            <div class="form-group" style="margin-bottom: 24px;">
                                <label for="username" class="form-label"
                                    style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">GitHub
                                    Username</label>
                                <div style="position: relative;">
                                    <i class="fab fa-github"
                                        style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                                    <input type="text" id="username" name="username" class="form-control"
                                        placeholder="username" required
                                        style="padding-left: 48px; height: 56px; font-size: 1rem;">
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 32px;">
                                <label for="accountName" class="form-label"
                                    style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Workspace
                                    Name (optional)</label>
                                <input type="text" id="accountName" name="accountName" class="form-control"
                                    placeholder="Production Repo" style="height: 56px; font-size: 1rem;">
                            </div>
                            <% } else if (providerSlug==='wordpress' ) { %>
                                <div class="form-group" style="margin-bottom: 24px;">
                                    <label for="siteUrl" class="form-label"
                                        style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">WordPress
                                        CMS URL</label>
                                    <div style="position: relative;">
                                        <i class="fas fa-link"
                                            style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                                        <input type="text" id="siteUrl" name="siteUrl" class="form-control"
                                            placeholder="https://yoursite.com" required
                                            style="padding-left: 48px; height: 56px; font-size: 1rem;">
                                    </div>
                                </div>
                                <div class="form-group" style="margin-bottom: 32px;">
                                    <label for="username" class="form-label"
                                        style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Admin
                                        Username</label>
                                    <div style="position: relative;">
                                        <i class="fas fa-user-shield"
                                            style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                                        <input type="text" id="username" name="username" class="form-control"
                                            placeholder="admin" required
                                            style="padding-left: 48px; height: 56px; font-size: 1rem;">
                                    </div>
                                </div>
                                <% } else if (providerSlug==='shopify' ) { %>
                                    <div class="form-group" style="margin-bottom: 24px;">
                                        <label for="storeName" class="form-label"
                                            style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Shopify
                                            Store ID</label>
                                        <div style="position: relative;">
                                            <i class="fab fa-shopify"
                                                style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                                            <input type="text" id="storeName" name="storeName" class="form-control"
                                                placeholder="my-store-name" required
                                                style="padding-left: 48px; height: 56px; font-size: 1rem;">
                                        </div>
                                        <small class="text-muted" style="display: block; margin-top: 8px;">Domain:
                                            <strong>[store-name].myshopify.com</strong></small>
                                    </div>
                                    <div class="form-group" style="margin-bottom: 32px;">
                                        <label for="storeUrl" class="form-label"
                                            style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Custom
                                            Domain (optional)</label>
                                        <input type="text" id="storeUrl" name="storeUrl" class="form-control"
                                            placeholder="www.yourstore.com" style="height: 56px; font-size: 1rem;">
                                    </div>
                                    <% } %>

                                        <div
                                            style="background: var(--info-bg); color: var(--info); padding: 16px; border-radius: 12px; font-size: 0.85rem; margin-bottom: 32px; display: flex; gap: 12px; align-items: flex-start; border: 1px solid rgba(14, 165, 233, 0.2);">
                                            <i class="fas fa-shield-halved" style="margin-top: 3px;"></i>
                                            <div>
                                                <strong>Sandboxed Connection</strong><br>
                                                Agent will have restricted access to metadata fields only. No system
                                                files will be modified.
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary"
                                            style="width: 100%; height: 56px; font-size: 1.1rem; font-weight: 700; margin-bottom: 12px;">
                                            Link to <%= provider %>
                                        </button>

                                        <a href="/oauth" class="btn btn-ghost btn-sm"
                                            style="width: 100%; height: 44px; display: flex; align-items: center; justify-content: center;">
                                            Cancel Connection
                                        </a>
                    </form>
            </div>
        </div>

        <%- include('../partials/footer') %>