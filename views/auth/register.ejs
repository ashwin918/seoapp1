<%- include('../partials/head') %>

    <div class="auth-page"
        style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 60px 20px;">
        <div class="auth-box"
            style="width: 100%; max-width: 520px; background: var(--bg-card); border: 1px solid var(--border); border-radius: var(--radius-lg); backdrop-filter: blur(20px); padding: 48px; box-shadow: var(--shadow-lg);">
            <div class="auth-header" style="text-align: center; margin-bottom: 40px;">
                <div class="auth-logo"
                    style="width: 64px; height: 64px; background: linear-gradient(135deg, var(--primary), var(--accent)); border-radius: 16px; display: inline-flex; align-items: center; justify-content: center; color: white; font-size: 1.75rem; margin-bottom: 24px; box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);">
                    <i class="fas fa-sparkles"></i>
                </div>
                <h1 class="auth-title"
                    style="font-size: 2.25rem; font-weight: 800; margin-bottom: 8px; letter-spacing: -0.02em;">Get
                    started free</h1>
                <p class="text-muted" style="font-size: 1rem;">Join 10,000+ marketers optimizing with AI agents</p>
            </div>

            <%- include('../partials/flash') %>

                <form action="/register" method="POST" class="auth-form">
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="name" class="form-label"
                            style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Full
                            Name</label>
                        <div style="position: relative;">
                            <i class="fas fa-user"
                                style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Alex Rivera"
                                required style="padding-left: 48px; height: 56px; font-size: 1rem;">
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="email" class="form-label"
                            style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Email
                            Address</label>
                        <div style="position: relative;">
                            <i class="fas fa-envelope"
                                style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                            <input type="email" id="email" name="email" class="form-control"
                                placeholder="alex@company.com" required
                                style="padding-left: 48px; height: 56px; font-size: 1rem;">
                        </div>
                    </div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 32px;">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label for="password" class="form-label"
                                style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="••••••••" required minlength="8" style="height: 56px; font-size: 1rem;">
                        </div>
                        <div class="form-group" style="margin-bottom: 0;">
                            <label for="confirmPassword" class="form-label"
                                style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--text-muted); margin-bottom: 8px;">Confirm</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                                placeholder="••••••••" required style="height: 56px; font-size: 1rem;">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary"
                        style="width: 100%; height: 56px; font-size: 1.1rem; font-weight: 700;">
                        Create Your Account
                    </button>
                </form>

                <div
                    style="margin-top: 32px; padding-top: 32px; border-top: 1px solid var(--border); text-align: center;">
                    <p class="text-muted" style="font-size: 0.95rem;">
                        Already have an account? <a href="/login"
                            style="color: var(--primary); font-weight: 700; margin-left: 4px;">Sign in here</a>
                    </p>
                </div>
        </div>
    </div>

    <%- include('../partials/footer') %>