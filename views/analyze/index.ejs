<% const title='Analyze' ; const active='analyze' ; %>
    <%- include('../partials/head') %>
        <%- include('../partials/navbar') %>

            <div class="layout">
                <%- include('../partials/sidebar') %>

                    <main class="main-content">
                        <div class="page-header mb-4">
                            <h1 class="page-title">Digital Diagnostics</h1>
                            <p class="text-muted">Enter any URL to deploy our analysis agents across your site
                                architecture.</p>
                        </div>

                        <%- include('../partials/flash') %>

                            <div class="card" style="max-width: 600px; margin: 40px 0;">
                                <div class="card-body">
                                    <form action="/analyze" method="POST" id="analyzeForm">
                                        <div class="form-group">
                                            <label class="form-label">Target Website URL</label>
                                            <div style="position: relative;">
                                                <i class="fas fa-link"
                                                    style="position: absolute; left: 18px; top: 18px; color: var(--text-light);"></i>
                                                <input type="text" id="url" name="url" class="form-control"
                                                    placeholder="https://yourwebsite.com" required
                                                    style="padding-left: 48px; font-size: 1.1rem; height: 56px;">
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-lg" id="analyzeBtn"
                                            style="width: 100%; height: 56px;">
                                            <i class="fas fa-radar"></i> Start Analysis
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <div class="grid-3 mt-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="feature-icon"
                                            style="width: 48px; height: 48px; font-size: 1.2rem; margin-bottom: 20px;">
                                            <i class="fas fa-heading"></i>
                                        </div>
                                        <h4>Semantic Structure</h4>
                                        <p class="text-muted" style="font-size: 0.9rem;">We verify title tags, H1-H6
                                            hierarchy, and semantic HTML validity.</p>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-body">
                                        <div class="feature-icon"
                                            style="width: 48px; height: 48px; font-size: 1.2rem; margin-bottom: 20px; background: linear-gradient(135deg, var(--success), var(--primary));">
                                            <i class="fas fa-mobile-alt"></i>
                                        </div>
                                        <h4>Omni-Device Read</h4>
                                        <p class="text-muted" style="font-size: 0.9rem;">Testing responsiveness and
                                            performance across mobile and desktop environments.</p>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-body">
                                        <div class="feature-icon"
                                            style="width: 48px; height: 48px; font-size: 1.2rem; margin-bottom: 20px; background: linear-gradient(135deg, var(--warning), var(--accent));">
                                            <i class="fas fa-shield-alt"></i>
                                        </div>
                                        <h4>Technical Trust</h4>
                                        <p class="text-muted" style="font-size: 0.9rem;">Analyzing SSL security, meta
                                            instructions, and crawlability issues.</p>
                                    </div>
                                </div>
                            </div>
                    </main>
            </div>

            <script>
                document.getElementById('analyzeForm').addEventListener('submit', function () {
                    var btn = document.getElementById('analyzeBtn');
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deploying Agents...';
                    btn.disabled = true;
                });
            </script>

            <%- include('../partials/footer') %>