<% const title='Analysis History' ; const active='history' ; %>
    <%- include('../partials/head') %>
        <%- include('../partials/navbar') %>

            <div class="layout">
                <%- include('../partials/sidebar') %>

                    <main class="main-content">
                        <div class="page-header">
                            <h1 class="page-title">Analysis History</h1>
                            <p class="page-description">View all your previous SEO analyses.</p>
                        </div>

                        <%- include('../partials/flash') %>

                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">All Analyses</h3>
                                    <a href="/analyze" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus"></i>
                                        New Analysis
                                    </a>
                                </div>
                                <div class="card-body">
                                    <% if (analyses.length===0) { %>
                                        <div class="empty-state">
                                            <div class="empty-icon">
                                                <i class="fas fa-history"></i>
                                            </div>
                                            <p class="empty-title">No analyses yet</p>
                                            <p class="empty-description">Start by analyzing a URL to see your history
                                                here.</p>
                                            <a href="/analyze" class="btn btn-primary">Analyze URL</a>
                                        </div>
                                        <% } else { %>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>URL</th>
                                                            <th>Score</th>
                                                            <th>Title Score</th>
                                                            <th>Meta Score</th>
                                                            <th>Content Score</th>
                                                            <th>Date</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% analyses.forEach(function(analysis) { %>
                                                            <tr>
                                                                <td>
                                                                    <a href="/analyze/<%= analysis.id %>"
                                                                        style="display: flex; align-items: center; gap: 0.5rem;">
                                                                        <i class="fas fa-globe"
                                                                            style="color: var(--primary-400);"></i>
                                                                        <%= analysis.url.length> 40 ?
                                                                            analysis.url.substring(0, 40) + '...' :
                                                                            analysis.url %>
                                                                    </a>
                                                                </td>
                                                                <td>
                                                                    <span
                                                                        class="badge <%= analysis.overall_score >= 80 ? 'badge-success' : analysis.overall_score >= 60 ? 'badge-warning' : 'badge-danger' %>">
                                                                        <%= analysis.overall_score %>%
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <%= analysis.title_score %>%
                                                                </td>
                                                                <td>
                                                                    <%= analysis.meta_score %>%
                                                                </td>
                                                                <td>
                                                                    <%= analysis.content_score %>%
                                                                </td>
                                                                <td class="text-muted">
                                                                    <%= new
                                                                        Date(analysis.analyzed_at).toLocaleDateString('en-US',
                                                                        { month: 'short' , day: 'numeric' ,
                                                                        year: 'numeric' }) %>
                                                                </td>
                                                                <td>
                                                                    <a href="/analyze/<%= analysis.id %>"
                                                                        class="btn btn-secondary btn-sm">
                                                                        <i class="fas fa-eye"></i>
                                                                        View
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                            <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } %>
                                </div>
                            </div>
                    </main>
            </div>

            <%- include('../partials/footer') %>