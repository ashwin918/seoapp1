<nav class="navbar">
    <div class="navbar-content">
        <a href="/" class="navbar-brand">
            <div class="brand-icon">
                <i class="fas fa-rocket"></i>
            </div>
            <span class="brand-text">SEO Bot</span>
        </a>

        <div class="navbar-right">
            <% if (typeof user !=='undefined' && user) { %>
                <div class="user-menu">
                    <span class="user-name">
